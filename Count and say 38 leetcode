class Solution {
    public String countAndSay(int n) {
        if (n == 1) return "1";  // Base case
        
        String result = "1";
        
        // Generate the sequence up to n
        for (int i = 2; i <= n; i++) {
            result = getNextSequence(result);
        }
        
        return result;
    }

    private String getNextSequence(String s) {
        StringBuilder next = new StringBuilder();
        int count = 1;
        
        // Traverse the string
        for (int i = 1; i < s.length(); i++) {
            if (s.charAt(i) == s.charAt(i - 1)) {
                count++;
            } else {
                // Append "count + previous digit"
                next.append(count).append(s.charAt(i - 1));
                count = 1; // reset count
            }
        }
        
        // Append the last counted group
        next.append(count).append(s.charAt(s.length() - 1));
        
        return next.toString();
    }
}
